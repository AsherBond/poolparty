#!/usr/bin/env ruby
$:.unshift(File.join(File.dirname(__FILE__), "..", "lib"))
require "poolparty"
require "poolpartycl"
o = PoolParty::Optioner.new(ARGV) do |opts, optioner|
  opts.on('-n name', '--name name', 'Listing for cloud name')    { |c| optioner.cloudname c }
end
load_pool(o.spec || Binary.get_existing_spec_location)

include Remote

begin
  @cloud = cloud(o.cloudname.downcase.to_sym)
rescue
  puts "Cloud name required. Please specify it with -n name"
  exit(0)
end

with_cloud(@cloud, {:testing => o.testing}) do
  puts header("Reconfiguring cloud #{name}")
  prepare_to_configuration
  
  puts "Building configuration file"
  build_and_store_new_config_file
  
  puts "Syncing local configuration files with master"
  rsync_storage_files_to(master)
  
  puts "Logging on to the master and restarting manager"
  cmd = "puppetd"
  run_command_on(cmd, master) unless testing
end