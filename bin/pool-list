#!/usr/bin/env ruby
$:.unshift(File.join(File.dirname(__FILE__), "..", "lib"))
require "poolparty"
require "poolpartycl"
o = PoolParty::Optioner.new(ARGV) do |opts, optioner|
  opts.on('-l [remote|local]', '--location', 'Remote or local (default: local)')    { |o| optioner.location o }
end
load_pool(o.spec || Binary.get_existing_spec_location)

location = o.location ? o.location : ARGV.pop

include Remote

case location
when "remote", "r", "-r", "--remote"
  puts header("Remote instance list")
  puts PoolParty::Remote::RemoteInstance.list_from_remote.map{|a| a.to_s}
else
  puts header("Local instance list (cached)")
  puts PoolParty::Remote::RemoteInstance.list_from_local.map{|a| a.to_s}
end