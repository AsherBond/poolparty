#!/usr/bin/env ruby
require "rubygems"
require "poolparty"

location = ARGV.pop

include Remote

case location
when "remote", "r", "-r", "--remote"
  puts "Listing remote instances"
  PoolParty::Remote::RemoteInstance.list_from_remote
else
  puts "Listing instances from local list"
  puts PoolParty::Remote::RemoteInstance.list_from_local
end