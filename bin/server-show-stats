#!/usr/bin/env ruby
$:.unshift(File.join(File.dirname(__FILE__), "..", "lib"))
require "poolparty"
require "poolpartycl"

o = PoolParty::Optioner.new(ARGV) do |opts, optioner|
  opts.on('-n name', '--name name', 'Host name')    { |h| optioner.hostname h }
end

o.loaded_clouds.each do |cloud|
  
  with_cloud(cloud) do    
    puts "Stats"
    puts rules_values
  end  
  
end