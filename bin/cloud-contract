#!/usr/bin/env ruby
$:.unshift(File.join(File.dirname(__FILE__), "..", "lib"))
require "poolparty"
require "poolpartycl"

o = PoolParty::Optioner.new(ARGV) do |opts, optioner|
  opts.on('-n name', '--name name', 'Listing for cloud name')    { |c| optioner.cloudname c }
end

o.loaded_clouds.each do |cl|
  with_cloud(cl) do
    puts header("Contracting cloud #{name}")
    puts "#{instances_by_status("running").size} running instances (#{minimum_instances} minimum instances)"
    puts testing ? "Not contracting (test mode)" : "Contracting the cloud if possible"
    contract_cloud_if_necessary( !testing )
  end
end