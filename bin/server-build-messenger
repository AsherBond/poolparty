#!/usr/bin/env ruby
$:.unshift(File.join(File.dirname(__FILE__), "..", "lib"))
require "poolparty"
require "poolpartycl"

root_dir = ::File.expand_path( ::File.join(::File.dirname(__FILE__), "..", "lib/erlang/messenger") )
cmd = "cd #{root_dir} && erl -pa ./ebin -s pm_packager start -s init stop"

puts cmd

out = %x[#{cmd}]